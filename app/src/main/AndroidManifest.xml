<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.samia.bnaentreprise">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:windowSoftInputMode="adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ActionsActivity" />
        <activity android:name=".activities.EmployeesManagerActivity" />
        <activity android:name=".activities.RibActivity" />
        <activity android:name=".activities.PaySalaryActivity" />
        <activity android:name=".activities.PaidEmployrsListActivity" />
        <activity android:name=".activities.ManageAccountActivity" />
        <activity android:name=".activities.ChangePasswdActivity" />
        <activity android:name=".activities.HistoryActivity" />
        <activity android:name=".activities.CheckBalanceActivity" />
        <activity
            android:name=".activities.AjoutEmployeActivity"
            android:label="@string/title_activity_ajout_employe"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>